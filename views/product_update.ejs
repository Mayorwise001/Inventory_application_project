<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('header.ejs') %> 
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar content -->
            <%- include('sidebar.ejs') %> 

            <!-- Main content -->
            <div class="col-md-9 main-content">
                <div class="update-product-container">
                    <h1>Update Product</h1>

                    <form action="/upload/upload/<%= product._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <table class="table table-bordered details-table">
                            <tbody>
                                <tr>
                                    <th><label for="content1">Product Name</label></th>
                                    <td><input type="text" id="content1" name="content1" value="<%= product.content1 %>" required></td>
                                </tr>
                                <tr>
                                    <th><label for="content2">Description</label></th>
                                    <td><input type="text" id="content2" name="content2" value="<%= product.content2 %>" required></td>
                                </tr>
                                <tr>
                                    <th><label for="stock">No Available</label></th>
                                    <td><input type="number" id="stock" name="stock" value="<%= product.stock %>" required></td>
                                </tr>
                                <tr>
                                    <th><label for="category">Category</label></th>
                                    <td>
                                        <select id="category" name="category" required>
                                            <% categories.forEach(category => { %>
                                                <option value="<%= category._id %>" <%= category._id.equals(product.category) ? 'selected' : '' %>>
                                                    <%= category.name %>
                                                </option>
                                            <% }) %>
                                        </select>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <button type="submit" class="btn btn-primary">Update Product</button>
                    </form>

                    <a href="/upload/<%= product._id %>" class="btn btn-secondary mt-3">Back to Detail</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
