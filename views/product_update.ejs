<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('header.ejs') %> 
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar content -->
            <%- include('sidebar.ejs') %> 
            <div class="col-md-9 main-content">
                <div class="update-product-container">
                    <h1>Update Product</h1>
                    <form action="/upload/upload/<%= product._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <label for="content1">Content 1:</label>
                        <input type="text" id="content1" name="content1" value="<%= product.content1 %>" required><br>
                        <label for="content2">Content 2:</label>
                        <input type="text" id="content2" name="content2" value="<%= product.content2 %>" required><br>
                        <label for="content2">No available:</label>
                        <input type="number" id="stock" name="stock" value="<%= product.stock %>" required><br>

                        <label for="image">Image:</label>
                        <input type="file" id="image" name="image"><br>
                        <label for="category">Category:</label>
                        <select id="category" name="category" required>
                            <% categories.forEach(category => { %>
                                <option value="<%= category._id %>" <%= category._id.equals(product.category) ? 'selected' : '' %>><%= category.name %></option>
                            <% }) %>
                        </select><br>
                        <button type="submit" class="btn btn-primary">Update Product</button>
                    </form>
                    <a href="/upload/<%= product._id %>" class="btn btn-secondary mt-3">Back to Detail</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
