<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('header.ejs') %>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('sidebar.ejs') %>

            <div class="col-md-9 offset-md-3 main-content">
                <div class="products-container">
                    <h1>Product List</h1>
                    <a href="/upload/create" class="btn btn-primary mb-3">Create New Product</a>
                    <div id="product-list" class="row">
                        <% if (products.length > 0) { %>
                        <% products.forEach(product => { %>
                            <div class="col-md-4">
                                <div class="product-card card mb-4 shadow-sm">
                                    <img class="card-img-top product-list-image" src="<%= product.image %>" alt="Product Image">
                                    <div class="card-body">
                                        <p class="card-title">Model Name: <%= product.content1 %></p>
                                        <p class="card-text">Price: <%= product.price %></p>
                                        <p class="card-text">No available: <%= product.stock %></p>
                                        <p class="card-text">Category: <% if (product.category.length > 0) { %>
                                            <%= product.category[0].name %>
                                        <% } else { %>
                                            No category
                                        <% } %></p>
                                        <a href="/upload/upload/<%= product._id %>" class="btn btn-info">View Details</a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                        <% }else { %>
                            <h6>There are no products</h6>
                         <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
