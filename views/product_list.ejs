<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('header.ejs') %>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('sidebar.ejs') %>

            <div class="col-md-9 offset-md-3 main-content">
                <div class="products-container">
                    <h1>Product List</h1>
                    <a href="/upload/create" class="btn btn-primary mb-3">Create New Product</a>

                    <% if (products.length > 0) { %>
                        <table class="table table-striped product-table">
                            <thead>
                                <tr>
                                    <th>Model Name</th>
                                    <th>Price</th>
                                    <th>No Available</th>
                                    <th>Category</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
    <% products.forEach(product => { %>
        <tr>
            <td data-label="Model Name"><%= product.content1 %></td>
            <td data-label="Price"><%= product.price %></td>
            <td data-label="No Available"><%= product.stock %></td>
            <td data-label="Category">
                <% if (product.category.length > 0) { %>
                    <%= product.category[0].name %>
                <% } else { %>
                    No category
                <% } %>
            </td>
            <td data-label="Actions">
                <a href="/upload/upload/<%= product._id %>" class="btn btn-info btn-sm">View</a>
                <a href="/upload/upload/<%= product._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                <form action="/upload/<%= product._id %>" method="POST" style="display:inline;">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    <% }) %>
</tbody>

                        </table>
                    <% } else { %>
                        <h6>There are no products</h6>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
