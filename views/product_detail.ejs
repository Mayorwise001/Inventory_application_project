<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/stylesheets/productdetails.css">
    <%- include('header.ejs') %>
    
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('sidebar.ejs') %> 

            <!-- Main content -->
            <div class="col-md-9 main-content">
                <div class="product-detail-container">
                    <h1>Product Detail</h1>

                    <!-- Table view of details -->
                    <table class="details-table">
                        <tbody>
                            <tr>
                                <th>Product Name</th>
                                <td><%= product.content1 %></td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td><%= product.content2 %></td>
                            </tr>
                            <tr>
                                <th>Price (â‚¦)</th>
                                <td><%= product.price %></td>
                            </tr>
                            <tr>
                                <th>No Available</th>
                                <td><%= product.stock %></td>
                            </tr>
                            <tr>
                                <th>Category</th>
                                <td>
                                    <% if (product.category.length > 0) { %>
                                        <%= product.category[0].name %>
                                    <% } else { %>
                                        No category
                                    <% } %>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Action buttons -->
                    <a href="/product_list" class="btn btn-secondary">Back to List</a>
                    <a href="/upload/upload/<%= product._id %>/edit" class="btn btn-warning">Edit Product</a>
                    <form action="/upload/upload/<%= product._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this product?');" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete Product</button>
                    </form>
                    <a href="/upload/create" class="btn btn-primary mt-3">Upload Another</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
