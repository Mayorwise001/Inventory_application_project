<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login</title>

  <link rel="stylesheet" href="/login.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  />
</head>
<body>
  <div class="login-container">
    <form id="loginForm" class="login-form">
      <h1 class="login-title">Welcome Back</h1>
      <p class="login-subtitle">Log in to continue</p>

      <!-- Email -->
      <div class="input-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required placeholder="Enter your email"/>
      </div>

      <!-- Password -->
      <div class="input-group password-group">
        <label for="password">Password</label>
        <div class="password-wrapper">
          <input type="password" id="password" name="password" required placeholder="Enter your password"/>
          <span class="toggle-password" onclick="togglePassword()">
            <i class="fas fa-eye"></i>
          </span>
        </div>
      </div>

      <button type="submit" class="login-btn">Login</button>

      <div class="login-footer">
        <p>Don‚Äôt have an account? <a href="/upload/signup">Sign up</a></p>
        <p><a href="/">Go to homepage</a></p>
      </div>
    </form>
  </div>

  <script>
    function togglePassword() {
      const input = document.getElementById("password");
      const icon = document.querySelector(".toggle-password i");
      if (input.type === "password") {
        input.type = "text";
        icon.classList.replace("fa-eye", "fa-eye-slash");
      } else {
        input.type = "password";
        icon.classList.replace("fa-eye-slash", "fa-eye");
      }
    }

    document.getElementById("loginForm").addEventListener("submit", async (e) => {
      e.preventDefault();

      const email = document.getElementById("email").value;
      const password = document.getElementById("password").value;

      try {
        const res = await fetch("/upload/login", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ email, password }),
        });

        const data = await res.json();

        if (res.ok) {
          // Save token in localStorage
          localStorage.setItem("authToken", data.token);
        fetch("/upload/home", {
          method: "GET",
          headers: {
            "Authorization": `Bearer ${data.token}`, // attach token
          },
        });


          // Success toast
          Toastify({
            text: data.message || "Login successful üéâ",
            duration: 2000,
            gravity: "top",
            position: "right",
            style: {
              background: 'linear-gradient(135deg, #4CAF50, #2E7D32)', /* Gold theme */
              borderRadius: "8px",
              padding: "10px 20px",
              fontWeight: "500",
              color: "#fff",
            },
          }).showToast();

          // Redirect after 2 seconds
          setTimeout(() => {
            window.location.href = "/upload/home";
          }, 2000);
        } else {
          // Error toast
          Toastify({
            text: data.message || "Invalid email or password ‚ùå",
            duration: 3000,
            gravity: "top",
            position: "right",
            style: {
              background: "linear-gradient(to right, #ff5f6d, #ffc371)",
              borderRadius: "8px",
              padding: "10px 20px",
              fontWeight: "500",
              color: "#fff",
            },
          }).showToast();
        }
      } catch (error) {
        console.error(error);
        Toastify({
          text: "Server error. Please try again.",
          duration: 3000,
          gravity: "top",
          position: "right",
          style: {
            background: "linear-gradient(to right, #ff5f6d, #ffc371)",
            borderRadius: "8px",
            padding: "10px 20px",
            fontWeight: "500",
            color: "#fff",
          },
        }).showToast();
      }
    });
  </script>
</body>
</html>
