<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('header.ejs') %>
    <link rel="stylesheet" href="/stylesheets/products.css">
    
</head>
<body>
    <%- include('layout.ejs') %>

    <div class="col-9">
        <div class="container mt-5">
            <h1 class="text-center mb-4">Products in <%= categories.name %></h1>

            <% if (products.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered products-table">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Product Name</th>
                                <th scope="col">No Available</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(product => { %>
                                <tr>
                                    <td><%= product.content1 %></td>
                                    <td><%= product.stock %></td>
                                    <td>
                                        <a href="/upload/upload/<%= product._id %>" class="btn btn-sm btn-primary">
                                            View Details
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <h6 class="text-center text-muted">There are no products</h6>
            <% } %>

            <div class="text-center mt-4">
                <a href="/upload/home" class="btn btn-secondary">Back to Home</a>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
