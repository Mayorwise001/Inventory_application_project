<!DOCTYPE html>
<html lang="en">
<head>
    
    <%-include('header.ejs') %>
</head>
<body>
    <%-include('layout.ejs') %>
    <div class="col-9">
        <div class="container mt-5">
            <h1 class="text-center mb-4">Products in <%= categories.name %></h1>
            <div class="row">
                <% if (products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="col-md-4 mb-3">
                            <div class="card hover-effect">
                                <img src="<%= product.image %>" class="card-img-top product-image" alt="<%= product.content1 %>">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <h6 class="card-title mb-0">Product Name:</h6>
                                        <p class="card-text mb-0 ml-2"><%= product.content1 %></p>
                                    </div>

                                    <div class="d-flex align-items-center">
                                        <h6 class="card-title mb-0">No available:</h6>
                                        <p class="card-text mb-0 ml-2"><%= product.stock %></p>
                                    </div>
                                    <a href="/upload/upload/<%= product._id %>" class="btn btn-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <h6>There are no products</h6>
                <% } %>
            </div>
            <div class="text-center mt-4">
                <a href="/" class="btn btn-secondary">Back to Home</a>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
