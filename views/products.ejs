<!DOCTYPE html>
<html lang="en">
<head>
  <%-include('header.ejs') %>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar content -->
            <%- include('sidebar.ejs') %> 
            <div class="col-md-9 main-content">
                <div class="form-container">
                    <h1>Create a New Product</h1>
                    <form action="/upload/create" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="content1" class="form-label">Product Name:</label>
                            <input type="text" class="form-control" id="content1" name="content1" required>
                        </div>
                        <div class="mb-3">
                            <label for="content2" class="form-label">Description:</label>
                            <input type="text" class="form-control" id="content2" name="content2" required>
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">Price:</label>
                            <input type="number" class="form-control" id="price" name="price" required>
                        </div>
                        <div class="mb-3">
                            <label for="stock" class="form-label">Amount in Stock:</label>
                            <input type="number" class="form-control" id="stock" name="stock" required>
                        </div>
                        <div class="mb-3">
    
                        <div class="mb-3">
                            <label for="image" class="form-label">Image:</label>
                            <input type="file" class="form-control" id="image" name="image" required>
                        </div>
                        <div class="mb-3">
                            <label for="category" class="form-label">Category:</label>
                            <select class="form-select" id="category" name="category" required>
                                <% categories.forEach(category => { %>
                                    <option value="<%= category._id %>"><%= category.name %></option>
                                <% }) %>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Create Product</button>
                    </form>
                    <% if (typeof msg !== 'undefined') { %>
                        <p class="error-message"><%= msg %></p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>